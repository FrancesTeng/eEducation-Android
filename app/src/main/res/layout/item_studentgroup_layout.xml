<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_studentgroup_cell">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reward_ImageView"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:src="@drawable/ic_reward_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coVideoing_ImageView"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_6"
        android:src="@drawable/ic_discovideo"
        app:layout_constraintBottom_toBottomOf="@id/reward_ImageView"
        app:layout_constraintEnd_toStartOf="@id/reward_ImageView"
        app:layout_constraintTop_toTopOf="@id/reward_ImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/audio_ImageView"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_6"
        android:src="@drawable/ic_audio_close"
        app:layout_constraintBottom_toBottomOf="@id/coVideoing_ImageView"
        app:layout_constraintEnd_toStartOf="@id/coVideoing_ImageView"
        app:layout_constraintTop_toTopOf="@id/coVideoing_ImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/groupName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:text="组1"
        android:textColor="@color/gray_191919"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@id/audio_ImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/audio_ImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/coVideoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（正在台上）"
        android:textColor="@color/blue_44A2FC"
        android:textSize="@dimen/sp_9"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/groupName_TextView"
        app:layout_constraintStart_toEndOf="@id/groupName_TextView"
        app:layout_constraintTop_toTopOf="@id/groupName_TextView" />

    <View
        android:id="@+id/view0"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/gray_DBE2E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reward_ImageView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/members_RecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view0"
        tools:itemCount="4" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_DBE2E5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/members_RecyclerView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1">

        <View
            android:id="@+id/scrollView"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_4"
            android:background="@drawable/bg_groupmember_scrollview_layout" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>